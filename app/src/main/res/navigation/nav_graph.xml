<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/displayFragment">

    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.navigationcomponent.fragments.DisplayFragment"
        android:label="fragment_display"
        tools:layout="@layout/fragment_display" >
        <action
            android:id="@+id/navigateToAddFragment"
            app:destination="@id/addFragment"
             />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.navigationcomponent.fragments.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/navigateToDisplayFragment"
            app:destination="@id/displayFragment"
             />
    </fragment>
</navigation>